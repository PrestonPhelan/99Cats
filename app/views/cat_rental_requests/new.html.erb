<h3>Request a Cat!</h3>

<form class="" action="<%= cat_rental_requests_url %>" method="post">
  <select class="" name="cat_rental_request[cat_id]">
    <option disabled selected>--select cat--</option>
    <% Cat.all.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name %></option>
    <% end %>
  </select>
  <br />

  <label for="start_date">Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" value="" id="start_date">
  <br />

  <label for="end_date">End Date</label>
  <input type="date" name="cat_rental_request[end_date]" value="" id="end_date">
  <br />

  <input type="submit" name="" value="Submit Request">
</form>
