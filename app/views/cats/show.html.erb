<h3>
  <%= @cat.name %>
</h3>

<table>
  <tr>
     <th>Age</th>
     <td><%= @cat.age %></td>
  </tr>
  <tr>
     <th>Sex</th>
     <td><%= @cat.sex %></td>
  </tr>
  <tr>
     <th>Color</th>
     <td><%= @cat.color %></td>
  </tr>
</table>
<br />

<h4>Description</h4>

<% if @cat.description %>
<%= @cat.description  %>
<% else %>
No description available for this cat
<% end %>

<br />

<h4>Rental Requests</h4>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.cat_rental_requests.order(:start_date).each do |request| %>
    <tr>
      <td> <%= request.user.user_name %></td>
      <td> <%= request.start_date %></td>
      <td> <%= request.end_date %></td>
      <td>
      <% if request.pending?  && @cat.owner == current_user %>
        <%= button_to "Approve", approve_cat_rental_request_url, params: { request_id: request.id } %>
        <%= button_to "Deny", deny_cat_rental_request_url, params: { request_id: request.id } %>
      <% else %>
        <%= request.status %>
      <% end %>
      </td>
    </tr>
  <% end %>
</table>
